---
import Layout from "../layouts/BaseLayout.astro"; 
---
<Layout>
  <div class="max-w-6xl mx-auto text-center px-4 py-24 ">
    <div class="flex flex-col items-center gap-8 text-center">
      <div class="w-full">
      <h1 class="title text-6xl lg:text-8xl font-bold text-[#070441] leading-tight">
        Call Us <br /> <span class="text-[#4559b5]">Now
        <img src="/img/phone.svg" alt="Phone Icon" 
        class="phone-icon inline-block w-10 h-10 lg:w-14 lg:h-14 opacity-0 transition-opacity duration-500 ml-2" />
        </span>
      </h1>
      <div class="flex items-center justify-center mt-4">
        <p class="phone text-xl font-bold text-gray-700">
        (732) 852 9774
        </p>
      </div>
      </div>
    </div>

    <div class="call-to-action mt-10 bg-[#4559b5] text-white py-4 rounded-lg transition-transform transform hover:scale-105">
      <p class="ls:text-lg text-md font-semibold">
        Contact us today to start creating the home you've always dreamed of!
      </p>
    </div>

    <div class="mt-10">
      <h3 class="question text-2xl font-bold text-gray-800">
        Did you like what you saw?
      </h3>
      <p class="text-gray-600 mt-2">
        You can send us an email to request a quote.
      </p>

      <form class="form mt-6 space-y-4 lg:max-w-md max-w-80 mx-auto" 
        action="https://formsubmit.co/freddypaguay20@gmail.com" 
        method="POST">
  
        <!-- Name Field -->
        <input 
          type="text" 
          name="name" 
          placeholder="Name" 
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
        />
        
        <!-- Email Field -->
        <input 
          type="email" 
          name="email" 
          placeholder="Email" 
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
        />
        
        <!-- Message Field -->
        <textarea 
          name="message" 
          placeholder="Message" 
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
        ></textarea>

        <!-- Hidden field for redirect -->
        <input type="hidden" name="_next" value="https://emag-contrating-web-site.vercel.app/thanks">
        <input type="hidden" name="_subject" value="New contact message">
        
        <!-- Honeypot for basic protection -->
        <input type="text" name="_honey" style="display: none;">

        <!-- Submit Button -->
        <button 
          type="submit" 
          class="submit w-full bg-[#4559b5] text-white py-3 rounded-lg font-semibold hover:bg-[#1B6475] transition-transform transform hover:scale-105">
          Submit
        </button>
      </form>
    </div>
  </div>

  <script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", () => {
      // Animación para el título
      gsap.from(".title", {
        opacity: 0,
        y: -50,
        duration: 1.5,
        ease: "power4.out",
      });

      // Animación para el número de teléfono
      gsap.from(".phone", {
        opacity: 0,
        x: -100,
        duration: 1,
        ease: "power2.out",
        delay: 0.3,
      });

      // Animación para el icono del teléfono
      gsap.to(".phone-icon", {
        opacity: 1,
        scale: 1.2,
        duration: 1.5,
        ease: "elastic.out(1, 0.5)",
        delay: 0.5,
      });

      // Animación para el call-to-action
      gsap.from(".call-to-action", {
        opacity: 0,
        scale: 0.8,
        duration: 1.5,
        ease: "elastic.out(1, 0.5)",
      });

      // Animación del formulario
      gsap.from(".form input, .form textarea, .form button", {
        opacity: 0,
        y: 20,
        duration: 1,
        stagger: 0.2,
        ease: "power2.out",
        delay: 0.5,
      });
    });
  </script>
</Layout>
