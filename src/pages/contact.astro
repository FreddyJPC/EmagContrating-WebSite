---
import Layout from "../layouts/BaseLayout.astro"; 
---
<Layout>
  <div class="max-w-6xl mx-auto text-center px-4 py-24 lg:py-10">
    <div class="flex flex-col items-center">
      <div class="text-center">
        <h1 class="title lg:text-7xl text-5xl font-bold text-[#070441]">
          Call Us <br /> <span class="text-[#4559b5]">Now</span>
        </h1>
        <p class="phone text-xl font-bold mt-2 text-gray-700">
          (732) 852 9774
        </p>
      </div>
    </div>

    <div class="call-to-action mt-10 bg-[#4559b5] text-white py-4 rounded-lg">
      <p class="ls:text-lg text-md font-semibold">
        Contact us today to start creating the home you've always dreamed of!
      </p>
    </div>

    <div class="mt-10">
      <iframe 
        class="w-full h-80 rounded-lg shadow-lg"
        loading="lazy"
        allowfullscreen
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.092456744133!2d-122.41941548468145!3d37.77492997975956!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085808cbae6b89d%3A0x0!2zMzfCsDQ2JzMxLjciTiAxMjLCsDI1JzE3LjQiVw!5e0!3m2!1sen!2sus!4v1630635175664!5m2!1sen!2sus">
      </iframe>
    </div>

    <div class="mt-10">
      <h3 class="question text-2xl font-bold text-gray-800">
        Did you like what you saw?
      </h3>
      <p class="text-gray-600 mt-2">
        You can send us an email to request a quote.
      </p>

      <form class="form mt-6 space-y-4 lg:max-w-md max-w-80 mx-auto" 
      action="https://formsubmit.co/freddypaguay20@gmail.com" 
      method="POST">
  
        <!-- Name Field -->
        <input 
          type="text" 
          name="name" 
          placeholder="Name" 
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
        />
        
        <!-- Email Field -->
        <input 
          type="email" 
          name="email" 
          placeholder="Email" 
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
        />
        
        <!-- Message Field -->
        <textarea 
          name="message" 
          placeholder="Message" 
          required 
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400"
        ></textarea>

        <!-- Hidden field for redirect -->
        <input type="hidden" name="_next" value="https://emag-contrating-web-site.vercel.app/thanks">
        <input type="hidden" name="_subject" value="New contact message">
        
        <!-- Honeypot for basic protection -->
        <input type="text" name="_honey" style="display: none;">

        <!-- Submit Button -->
        <button 
          type="submit" 
          class="submit w-full bg-[#4559b5] text-white py-3 rounded-lg font-semibold hover:bg-[#1B6475] ">
          Submit
        </button>
      </form>
    </div>
  </div>

  <script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", () => {
      // Animación para el título
      gsap.from(".title", {
        opacity: 0,
        y: -50,
        duration: 1.5,
        ease: "power4.out",
      });

      // Animación para el número de teléfono
      gsap.from(".phone", {
        opacity: 0,
        x: -100,
        duration: 1,
        ease: "power2.out",
        delay: 0.3,
      });

      // Animación para el call-to-action
      gsap.from(".call-to-action", {
        opacity: 0,
        scale: 0.8,
        duration: 1.5,
        ease: "elastic.out(1, 0.5)",
      });

      // Animación del formulario
      gsap.from(".form input, .form textarea, .form button", {
        opacity: 0,
        y: 20,
        duration: 1,
        stagger: 0.2,
        ease: "power2.out",
        delay: 0.5,
      });

    });
  </script>
</Layout>
